{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch run Pithee.Api",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "watch",
                "run",
                "--no-restore",
                "--no-hot-reload"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "dedicated","focus": false,
                "revealProblems": "onProblem",
                "echo": false,
                "group": "test"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/Pithee.Api"
            },
            "problemMatcher": [

            ]
        },
        {
            "label": "Watch Api.Tests",
            "type": "shell",
            "group": "test",
            "presentation": {
                "clear": true,
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "dedicated","focus": false,
                "revealProblems": "onProblem",
                "echo": false,
                "group": "test"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/Pithee.Api.Tests"
            },
            "command": "../../scripts/tasks/watch-test.sh",
            "isBackground": true,
            "problemMatcher": {
                "owner": "tests",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\\s*at (?:[^.]+\\.)+([^()]+)\\(\\) in (.*):line (\\d+)$",
                        "message": 1,
                        "file": 2,
                        "line": 3,
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting test execution",
                    "endsPattern": "Waiting for a file to change"
                }
            }
        },
